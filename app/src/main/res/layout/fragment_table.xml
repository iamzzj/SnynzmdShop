<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/v_table_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="报表"
            android:textColor="@color/title_back"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <include layout="@layout/devider" />


    <LinearLayout
        style="@style/table_menu_background">

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/table_menu_wdxs" />

        <TextView
            style="@style/table_menu_text"
            android:text="我的销售" />

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/more" />

    </LinearLayout>

    <LinearLayout
        style="@style/table_menu_background">

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/table_menu_wdzc" />

        <TextView
            style="@style/table_menu_text"
            android:text="我的支出" />

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/more" />

    </LinearLayout>


    <LinearLayout
        style="@style/table_menu_background">

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/table_menu_wdyl" />

        <TextView
            style="@style/table_menu_text"
            android:text="我的盈利" />

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/more" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_table_warning"
        style="@style/table_menu_background">

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/table_menu_xqyj" />

        <TextView
            style="@style/table_menu_text"
            android:text="校期预警" />

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/more" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_table_inventory"
        style="@style/table_menu_background">

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/table_menu_mdkc" />

        <TextView
            style="@style/table_menu_text"
            android:text="门店库存" />

        <ImageView
            style="@style/table_menu_image"
            android:src="@mipmap/more" />

    </LinearLayout>


</LinearLayout>